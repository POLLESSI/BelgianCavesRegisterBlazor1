@page "/nowners/nownerview"
@using BelgianCavesRegisterBlazor1.Client.Models

<h3>Owners View</h3>

<table class="table table-striped table-bordered">
    <tr>
        <th>Status : </th>
        <th>Agreement : </th>
        <th></th>
    </tr>
    @foreach(NOwnerModel no in NOwnerList)
    {
        <tr>
            <td>@no.Status</td>
            <td>@no.Agreement</td>
            <td><button class="btn btn-sm btn-outline-primary" @onclick="() => ClickInfo(no.NOwner_Id)">Info</button></td>
        </tr>
    }
</table>

<hr />
@if(SelectedId > 0)
{
    <NOwnerDetail id="SelectedId"></NOwnerDetail>
}


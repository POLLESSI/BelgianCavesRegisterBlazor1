@page "/bibliographies/bibliographycreate"
@using Microsoft.AspNetCore.Components.Forms
<h3>Bibliography Creating</h3>

<EditForm Model="bibliographyform" OnSubmit="submit" class="form-control">
    <div class="form-control-sm">
        <label>Title : </label>
        <InputText @bind-value="bibliographyform.Title"></InputText>
    </div>
    <div class="form-control-sm">
        <label>Author : </label>
        <InputText @bind-value="bibliographyform.Author"></InputText>
    </div>
    <div class="form-control-sm">
        <label>ISBN : </label>
        <InputText @bind-value="bibliographyform.ISBN"></InputText>
    </div>
    <div class="form-control-sm">
        <label>DataType : </label>
        <InputText @bind-value="bibliographyform.DataType"></InputText>
    </div>
    <div class="form-control-sm">
        <label>Detail : </label>
        <InputText @bind-value="bibliographyform.Detail"></InputText>
    </div>
    <div>
        <button type="submit" button="btn btn-success">Submit</button>
    </div>
</EditForm>


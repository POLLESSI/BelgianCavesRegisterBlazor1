@page "/moderators/bibliographyview"
@using BelgianCavesRegisterBlazor1.Client.Models
@inject NavigationManager NavigationManager

<h1>Bibliographies Repertory</h1>

<table class="table table-striped table-bordered">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>DataType</th>
        <th>Detail</th>
        <th></th>
    </tr>
    @foreach(BibliographyModel bi in BibliographyList)
    {
        <tr>
            <td>@bi.Title</td>
            <td>@bi.Author</td>
            <td>@bi.ISBN</td>
            <td>@bi.DataType</td>
            <td>@bi.Detail</td>
            <td><button class="btn btn-sm btn-outline-info" @onclick="() => ClickInfo(bi.Bibliography_Id)">Info</button></td>
        </tr>
    }
</table>

<hr />
<hr />
<hr />
@if(SelectedId > 0)
{
    <BibliographyDetail id="SelectedId"></BibliographyDetail>
}


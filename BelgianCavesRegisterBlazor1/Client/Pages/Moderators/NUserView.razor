@page "/moderators/nuserview"
@using BelgianCavesRegisterBlazor1.Client.Models
@inject NavigationManager NavigationManager

<h3>Users View</h3>

<table class="table table-striped table-bordered">
    <tr>
        <th>Nickname : </th>
        <th>Password : </th>
        <th>Security Stamp</th>
        <th>Email : </th>
        <th>Id Person : </th>
        <th>Id Rôle : </th>
        <th></th>
    </tr>
    @foreach (NUserModel nu in NUsersList)
    {
        <tr>
            <td>@nu.Pseudo</td>
            <td>@nu.PasswordHash</td>
            <td>@nu.SecurityStamp</td>
            <td>@nu.Email</td>
            <td>@nu.NPerson_Id</td>
            <td>@nu.Role_Id</td>
            <td><button class="btn btn-sm btn-outline-success" @onclick="() => ClicInfo(nu.NUser_Id)"></button></td>
        </tr>
    }
</table>

<hr />
<hr />
<hr />

@if(SelectedId is not null)
{
    <NUserDetail id="SelectedId"></NUserDetail>
}

